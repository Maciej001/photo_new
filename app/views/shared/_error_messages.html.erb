<!-- every request to render: 
render 'shared/error_messages', object: f.object

f.object can be @user or @micropost depending on the context -->

<% if object.errors.any? %>
	<div class="error_explanations">
		 <h2>The form contains <%= pluralize(object.errors.count, "error") %>.</h2>
		<ul>
			<% object.errors.full_messages.each do |msg| %>
				<li>* <%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>